<?xml version="1.0"?>
<config>
    <tabs>
        <magazento translate="label">
            <label>Magazento.com</label>
            <sort_order>250</sort_order>
        </magazento>
    </tabs>
    <sections>
        <tabmegamenu translate="label" module="tabmegamenu">
            <label>Tabmegamenu</label>
            <tab>magazento</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <options translate="label">
                    <label>Main options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <actiontype translate="label">
                            <label>Tab Action Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tabmegamenu/source_action</source_model>
                            <sort_order>61</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </actiontype>
                        <homebutton translate="label">
                            <label>Home page button</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </homebutton>
                        <maximumsubcat translate="label">
                            <label>Subcat number</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tabmegamenu/source_maximumsubcat</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </maximumsubcat>
                        <moretext translate="label">
                            <label>More text</label>
                            <frontend_type>text</frontend_type>
                            <comment>More text for categories</comment>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </moretext>
                    </fields>
                </options>
                <system>   
                    <label>Extension system settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>9999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                	        
                    <fields>                	                         
	                    <includelivepipe translate="label">
	                        <label>Include livepipe.js library</label>
	                        <frontend_type>select</frontend_type>
	                        <source_model>adminhtml/system_config_source_yesno</source_model>
	                        <comment> Turn off if you're already using livepipe.js library in other extension (default:YES) </comment>
	                        <sort_order>60</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>0</show_in_store>
	                    </includelivepipe>   
                    </fields>                                     
                </system>
                <allpages translate="label">
                    <label>"All pages" item options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>51</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <title translate="label">
                            <label>Title text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </title>
                        <itemalign translate="label">
                            <label>Item align</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tabmegamenu/source_align</source_model>
                            <sort_order>61</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </itemalign>
                        <contentalign translate="label">
                            <label>Content align</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tabmegamenu/source_align</source_model>
                            <sort_order>62</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </contentalign>
                    </fields>
                </allpages>
            </groups>
        </tabmegamenu>
    </sections>
</config>